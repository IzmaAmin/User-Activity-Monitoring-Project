<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.geometry.*?>           
<?import javafx.scene.control.*?>      
<?import javafx.scene.layout.*?>       


<BorderPane xmlns:fx="http://javafx.com/fxml" 
            xmlns="http://javafx.com/javafx/21" 
            fx:controller="com.monitoring.LoginController" 
            onKeyPressed="#onKeyPressed" 
            style="-fx-background-color: #f5f5f5;">
    
    
    <center>
        <StackPane>
            
            
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8;">
                
                
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40" />
                </padding>
                
                
                <Label text="User Activity Monitoring System" 
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1a237e;" />
                
                
                <Separator style="-fx-padding: 10 0 10 0;" />
                
                
                <GridPane hgap="15" vgap="15" style="-fx-padding: 20 0 20 0;">
                    
                    
                    <Label text="Username:" 
                           style="-fx-font-size: 13px; -fx-text-fill: #424242;" 
                           GridPane.rowIndex="0" 
                           GridPane.columnIndex="0" />
                    
                    
                    <TextField fx:id="usernameField" 
                               promptText="Enter your username" 
                               prefWidth="250" 
                               style="-fx-font-size: 13px; -fx-padding: 10; -fx-border-radius: 4;" 
                               GridPane.rowIndex="0" 
                               GridPane.columnIndex="1" />
                    
                    
                    <Label text="Password:" 
                           style="-fx-font-size: 13px; -fx-text-fill: #424242;" 
                           GridPane.rowIndex="1" 
                           GridPane.columnIndex="0" />
                    
                    
                    <PasswordField fx:id="passwordField" 
                                   promptText="Enter your password" 
                                   prefWidth="250" 
                                   style="-fx-font-size: 13px; -fx-padding: 10; -fx-border-radius: 4;" 
                                   GridPane.rowIndex="1" 
                                   GridPane.columnIndex="1" />
                </GridPane>
                
                
                <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 10 0;">
                    
                    
                    <Button fx:id="loginButton" 
                            text="Login" 
                            style="-fx-font-size: 13px; -fx-padding: 10 40 10 40; -fx-background-color: #1a237e; -fx-text-fill: white; -fx-border-radius: 4; -fx-cursor: hand;" 
                            onAction="#onLogin" />
                    
                    
                    <Button fx:id="hiddenAdminButton" 
                            text="Admin Access" 
                            style="-fx-font-size: 13px; -fx-padding: 10 30 10 30; -fx-background-color: #f57c00; -fx-text-fill: white; -fx-border-radius: 4; -fx-cursor: hand;" 
                            onAction="#onAdminReveal" />
                </HBox>
                
                
                <Label fx:id="statusLabel" 
                       text="(Press Ctrl+Shift+A to reveal admin)" 
                       style="-fx-font-size: 11px; -fx-text-fill: #757575; -fx-padding: 10 0 0 0;" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>



