<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.geometry.*?>           
<?import javafx.scene.control.*?>      
<?import javafx.scene.layout.*?>       


<BorderPane xmlns:fx="http://javafx.com/fxml" 
            xmlns="http://javafx.com/javafx/21" 
            fx:controller="com.monitoring.UserDashboard" 
            style="-fx-background-color: #f5f5f5;">
    
    
    <top>
        
        <HBox spacing="15" style="-fx-background-color: #1a237e; -fx-padding: 15;">
            
            <padding>
                <Insets top="10" right="20" bottom="10" left="20" />
            </padding>
            
            
            <Label fx:id="welcomeLabel" 
                   text="Welcome, User" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
            
            
            <Region HBox.hgrow="ALWAYS" />
            
            
            <Button fx:id="logoutBtn" 
                    text="Logout" 
                    style="-fx-font-size: 12px; -fx-padding: 8 25 8 25; -fx-background-color: #f57c00; -fx-text-fill: white; -fx-border-radius: 4; -fx-cursor: hand;" 
                    onAction="#onLogout" />
        </HBox>
    </top>
    
    
    <center>
        
        <VBox spacing="15" style="-fx-padding: 20;">
            
            <padding>
                <Insets top="15" right="20" bottom="15" left="20" />
            </padding>
            
            
            <Label text="My Documents" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1a237e;" />
            
            
            <ListView fx:id="docsList" 
                      prefHeight="400" 
                      style="-fx-font-size: 12px; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10;" />
            
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" />
                </padding>
                
                
                <Button fx:id="addDocBtn" 
                        text="+ Add Document" 
                        style="-fx-font-size: 12px; -fx-padding: 10 30 10 30; -fx-background-color: #4caf50; -fx-text-fill: white; -fx-border-radius: 4; -fx-cursor: hand;" 
                        onAction="#onAddDocument" />
            </HBox>
        </VBox>
    </center>
</BorderPane>



